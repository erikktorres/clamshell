{
    "framework": "mocha",
    "serve_files": [
      "thirdparty/jquery/jquery.min.js",
      "thirdparty/superagent/superagent.js",
      "thirdparty/bootstrap/js/bootstrap.min.js",
      "build/browserified.js"
    ],
    "src_files": [
      "build/**/*.js",
      "build/**/*.css",
      "test/**/*.js"
    ],
    "launchers": {
        "Node": {
            "command": "mocha test/**/*.js -R tap",
            "protocol": "tap"
        }
    },
    "launch_in_dev": [ "chrome" ],
    "launch_in_ci": [ "chrome" ]
  }
